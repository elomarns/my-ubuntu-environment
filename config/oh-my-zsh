# Set Oh My Zsh path.
export ZSH=$HOME/.oh-my-zsh

# Set the theme.
export ZSH_THEME="robbyrussell"

# Set the update policies.
zstyle ':omz:update' mode auto
zstyle ':omz:update' frequency 7

# Set Oh My Zsh.
export HYPHEN_INSENSITIVE="true"
export ENABLE_CORRECTION="false"
plugins=(autojump per-directory-history zsh-autosuggestions zsh-syntax-highlighting history-substring-search colored-man-pages fzf)

# Activate Oh My Zsh.
source $ZSH/oh-my-zsh.sh
